extends layout

block content
	div.container(style='margin:20px')
		table.table.table-bordered.table-striped
			br
			h1 Panel Administrador (Documentos)
			thead
				tr
					
					th(style='width:40px') #
					th(style='width:180px') Titulo
					th(style='width:200px') Cuerpo
					th(style='width:180px') Fecha
					th(style='width:180px') Autor
					th(style='width:180px') Comentarios
					th(style='width:180px') Etiquetas
					th(style='width:180px') Opciones Admin
                    
                    
			tbody
			
			- for (var i = 0; i < posts.length; i++)
				tr
					td= i+1
					td= posts[i].title
					td= posts[i].body
					td= posts[i].date
					td= posts[i].author
					td	
						- for (var j = 0; j < posts[i].comments.length; j++)            
							p.subheading #{posts[i].comments[j].body}
					td= posts[i].tags
					td: a(class='#btn-delete', href='/deletePost/'+posts[i]._id ) Borrar
					td: a(class='#btn-editPost', href='/editPost/'+posts[i]._id ) Editar
	include navBar
 
block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/controllers/navBarController.js')
	script(src='/js/views/navBar.js')